---
import { Image } from "astro:assets";

import { footerLinks } from "../data/footerLinks";

import logo from "../imgs/ankt.svg";
import WebsiteBanners from "./WebsiteBanners.astro";

// font's too heavy
// Supports weights 400-900
// import "@fontsource-variable/playfair-display";
---

<footer
    class="mt-12 flex flex-col space-y-10 items-center w-full lg:mt-20 lg:max-w-7xl"
>
    <div
        class="flex flex-col-reverse space-y-12 space-y-reverse items-start lg:items-center w-full lg:flex-row lg:space-y-0 lg:justify-between"
    >
        <div
            class="left space-y-3 justify-center items-start w-max flex flex-col"
        >
            <Image
                src={logo}
                alt="Aniket Negi's personal Logo"
                width={32}
                height={21}
                loading="eager"
                class="select-none"
            />

            <!-- <span>ankt</span> -->
            <p
                class="text-LM-Text dark:text-DM-Text font-serif text-normal tracking-[-0.00875rem] sm:tracking-[-0.01rem] text-sm sm:text-base"
            >
                Designed & developed with ❤️ by Aniket Negi.
            </p>
        </div>

        <ul
            class="flex flex-row lg:space-x-6 w-full lg:w-max justify-between lg:justify-normal text-LM-Nav-Unselected dark:text-DM-Nav-Unselected"
        >
            {
                footerLinks.map((footerLink) => (
                    <li>
                        <a
                            class="hover:text-LM-Nav-Selected dark:hover:text-DM-Nav-Selected font-sans text-base font-medium tracking-[-0.02rem]"
                            target="_blank"
                            href={footerLink.href}
                        >
                            {footerLink.name}
                        </a>
                    </li>
                ))
            }
        </ul>
    </div>
    <WebsiteBanners />
</footer>
