---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="ankt / 404" >
    <div class="w-full h-full flex flex-col items-center">
        <div
            class="flex flex-col space-y-12 items-center text-center h-full w-max bg-LM-Secondary dark:bg-DM-Secondary shadow-xl rounded-xl sm:py-8 sm:px-16 p-4"
        >
            <span class="font-sans text-2xl font-medium tracking-[-0.075rem]"
                >404 Not Found</span
            >
            <div
                class="flex flex-col space-y-3.5 font-sans text-base font-normal tracking-tight[-0.015rem]"
            >
                <p>You seem to be lost...</p>
                <p>
                    Perhaps you would like to go back <a
                        class="text-orange hover:underline"
                        href="/">home</a
                    >
                </p>
            </div>
        </div>
    </div>
</BaseLayout>
